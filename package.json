{
  "name": "pluckvocab",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.0.29",
  "scripts": {
    "dev": "bun run scripts/build.ts --watch",
    "build": "NODE_ENV=production bun run scripts/build.ts",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --fix .",
    "format": "bunx biome format --write .",
    "typecheck": "bunx tsc --noEmit",
    "zip": "cd dist && zip -r ../pluckvocab.zip .",
    "test:e2e": "playwright test",
    "open": "bun run scripts/open-browser.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@playwright/test": "^1.58.1",
    "@types/bun": "^1.3.8",
    "chrome-types": "^0.1.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "preact": "^10.28.3"
  }
}
